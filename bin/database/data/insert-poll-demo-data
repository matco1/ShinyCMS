use strict;
use warnings;

# Local modules
use FindBin qw( $Bin );
use lib "$Bin/../../../lib";
use ShinyCMS;
use ShinyCMS::Schema;


# Get a database connection
my $schema = ShinyCMS::Schema->connect(
	ShinyCMS->config->{ 'Model::DB' }->{ connect_info }
);


# Create a poll question
my $poll = $schema->resultset( 'PollQuestion' )->find_or_create({
	question => 'Poll goes where?',
});


# Add some answers to the poll
my $answer1 = $poll->poll_answers->find_or_create({
	answer => 'Here',
});
my $answer2 = $poll->poll_answers->find_or_create({
	answer => 'There',
});

